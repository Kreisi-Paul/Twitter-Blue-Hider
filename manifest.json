{
    "manifest_version": 3,
    "name": "Twitter Blue Hider",
    "description": "Hides the Comments/Tweets of Twitter Blue Subscribers",
    "version": "0.1",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "popup/favicon_gray.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.twitter.com/*"],
            "css": ["scripts/main.css"]
        }
    ]
}